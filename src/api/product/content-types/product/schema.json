    "earring": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "necklaces": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "cuffs": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "belts": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "groomset": {
      "type": "boolean",
      "default": false,
      "required": true
